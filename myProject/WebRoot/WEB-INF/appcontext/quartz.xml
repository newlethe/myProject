<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	                    http://www.directwebremoting.org/schema/spring-dwr 
						http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd
						http://www.springframework.org/schema/aop 
					    http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
	                     ">
	<!-- 数据交互定时发送作业 --> 
    <bean id="excDataJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
       <property name="targetObject" ref="PCDataExchangeService"/> 
       <property name="targetMethod" value="sendAllQueuedExchangeData"/> 
       <property name="concurrent" value="true"/> 
    </bean> 
    <!-- 数据交互定时发送触发器  --> 
    <bean id="excDataTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean" > 
       <property name="jobDetail" ref="excDataJobDetail"/> 
       <property name="cronExpression"> 
           <value>0 0/2 0 * * ?</value> 
       </property> 
    </bean>
    
    <!-- 代办事项短信定时发送作业 --> 
    <bean id="sendSMSJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
       <property name="targetObject" ref="smsCommonService"/> 
       <property name="targetMethod" value="sendSms"/> 
       <property name="concurrent" value="true"/> 
    </bean> 
    <!-- 代办事项短信定时发送触发器  --> 
    <bean id="sendSMSTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean" > 
       <property name="jobDetail" ref="sendSMSJobDetail"/> 
       <property name="cronExpression"> 
           <value>0 0/30 7-19 * * ?</value> 
       </property> 
    </bean>
    
   	<!-- 设备催交定时发送作业 --> 
    <bean id="equUrgeJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
       <property name="targetObject" ref="equMgm"/> 
       <property name="targetMethod" value="sendSmsByEquUrgeRemind"/> 
       <property name="concurrent" value="true"/> 
    </bean> 
    <!-- 设备催交定时发送触发器  --> 
    <bean id="equUrgeTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean" > 
       <property name="jobDetail" ref="equUrgeJobDetail"/> 
       <property name="cronExpression"> 
           <value>0 0 9-17/2 * * ?</value>
       </property> 
    </bean>

     <!-- 任务调度器 --> 
    <bean lazy-init="false" autowire="no" id="testScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean"> 
       <property name="triggers"> 
          <list>
          	  <!-- 数据交互任务调度 -->
       		  <ref bean="excDataTrigger"/> 
          	  <!-- 代办事项短信任务调度 -->
       		  <ref bean="sendSMSTrigger"/> 
          	  <!-- 设备催交短信任务调度 -->
       		  <ref bean="equUrgeTrigger"/> 
          </list> 
       </property> 
       <property name="schedulerContextAsMap"> 
          <map> 
              <entry key="timeout" value="30"/> 
          </map> 
       </property> 
       <!--  <property name="dataSource" ref="dataSource"/> -->
       <!-- Quartz的高级配置--> 
       <!--<property name="configLocation" value="classpath:com/lavasoft/quartz.properties"/>--> 
    </bean>	
    
</beans>


